<!DOCTYPE html>
<html lang ="en">
<head>
	<meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>RENT CAR</title>

    <link rel="stylesheet" href="../../Css/Style.css" />
</head>
<body>
    <%- include('../../fragments/header.ejs') %>
<main>
  <h2>Customer list</h2>
  <table class="table-list">
    <thead>
        <tr>
            <th>Car</th>
            <th>Location</th>
            <th>Rent Date</th>
            <th>Return Date</th>
            <th>Car Price</th>
        </tr>
    </thead>
    <tbody>
        <% for (let customer of customers) { %>
        <tr>
            <td><%= customer.firstname %></td>
            <td><%= customer.surname %></td>
            <td><%= customer.address %></td>
            <td><%= customer.age %></td>
            <td><%= customer.email %></td>
            <td><%= customer.number %></td>
            <td>
                <ul class="list-actions">
                    <li><a href="/customer/details/<%=customer._id%>" class="list-actions-button-details">Details</a></li>
                    <li><a href="/customer/edit/<%=customer._id%>" class="list-actions-button-edit">Edit</a></li>
                    <li><a href="/customer/delete/<%=customer._id%>" class="list-actions-button-delete">Delete</a></li>
                </ul>
            </td>
        </tr>
        <% } %>
    </tbody>
  </table>
  <p><a href="customer/add" class="button-add">Add new Customer</a></p>
  
</main>
<%- include('../../fragments/footer.ejs') %>
</body>
</html>

