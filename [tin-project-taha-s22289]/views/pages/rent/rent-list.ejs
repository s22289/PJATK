<!DOCTYPE html>
<html lang ="en">
<head>
	<meta charset="UTF-8">
        <meta name="author" content="FURKAN TAHA UNAL">
	<title>RENT CAR</title>

    <link rel="stylesheet" href="../../Css/Style.css" />
</head>
<body>
    <%- include('../../fragments/header.ejs') %>
<main>
        <h2>List of Rentals</h2>

        <table class="table-list">
            
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Car</th>
                    <th>Location</th>
                    <th>Rent Date</th>
                    <th>Return Date</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
    
            <tbody> 
                <tr>
                    <% for (let rent of rents) { %>
                        <tr>
                            <td><%= rent.customer._id %></td>
                            <td><%= rent.car._id %></td>
                            <td><%= rent.location %></td>
                            <td><%= rent.rentdate %></td>
                            <td><%= rent.returndate %></td>
                            <td><%= rent.price %></td>
                            <td>
                                <ul class="list-actions">
                                    <li><a href="/rent/details/<%=rent._id%>" class="list-actions-button-details">Details</a></li>
                                    <li><a href="/rent/edit/<%=rent._id%>" class="list-actions-button-edit">Edit</a></li>
                                    <li><a href="/rent/delete/<%=rent._id%>" class="list-actions-button-delete">Delete</a></li>
                            </ul>
                        </td>
                    </tr>
                        <% } %>
            </tbody>
            
        </table>
        
        <p><a href="rent/add" class="button-add">Add a new rental</a></p>
        
    </main>
    <%- include('../../fragments/footer.ejs') %>
</body>
</html>

